{% for server in configuration_ntp_servers %}
server {{ server }} prefer iburst
{% endfor %}

# Use the local system clock as a fallback
local stratum 10

# Log file location
logdir /var/log/chrony
log tracking reference measurements statistics

# Allow adjustments that are at most 1 second off
maxdistance 1.0

# RTC file for persistence across reboots
rtcfile /var/lib/chrony/rtc
