---
# Ansible Lint Configuration
skip_list:
  - yaml[line-length]           # Allow long lines in YAML
  - name[casing]                # Allow flexible task naming
  - risky-file-permissions      # We handle permissions explicitly

warn_list:
  - experimental                # Warn on experimental features
  - role-name                   # Warn on role naming issues

exclude_paths:
  - .github/
  - .git/
  - molecule/
  - venv/

# Enable specific rules
enable_list:
  - no-tabs
  - no-trailing-spaces

# Rules configuration
rules:
  line-length:
    max: 120
